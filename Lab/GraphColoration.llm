{
    The graph coloration problem.
}

red = 'red .
green = 'green .
blue = 'blue .

different_colors =
    'different_colors [
        |red green #
        |red blue #
        |green red #
        |green blue #
        |blue red #
        |blue green #
    ]
.

{Graph with connection 1 -- 2 -- 4 and 1 -- 4 and 2 -- 3.}
graph_1 =
    'graph_1 [
        | %v1 %v2 %v3 %v4 #
            different_colors %v1 %v2
            & different_colors %v2 %v4
            & different_colors %v1 %v4
            & different_colors %v2 %v3
    ]
.

{Graph with connection 1 -- 2 -- 3 -- 4 -- 5 and 1 -- 3 and 2 -- 4 and 2 -- 5.}
graph_2 =
    'graph_2 [
        | %v1 %v2 %v3 %v4 %v5 #
            different_colors %v1 %v2
            & different_colors %v2 %v3
            & different_colors %v3 %v4
            & different_colors %v4 %v5
            & different_colors %v1 %v3
            & different_colors %v2 %v4
            & different_colors %v2 %v5
    ]
.

{graph_1 %v1 %v2 %v3 %v4}
graph_2 %v1 %v2 %v3 %v4 %v5

